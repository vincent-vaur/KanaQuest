{
  "name": "kanaquest-v2",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./bin/www",
  "engines": {
    "node": ">=18.17.1"
  },
  "scripts": {
    "start": "node ./src/server.js",
    "start:dev": "nodemon ./src/server.js -e js,twig",
    "dev": "run-p -l css:watch start:dev",
    "css:watch": "tailwindcss -i ./src/app.css -o ./public/app.css --watch",
    "prisma:studio": "npx prisma studio",
    "prisma:client": "prisma generate client",
    "db:push": "prisma db push && npm run prisma:client",
    "password:generate": "node ./scripts/generatePassword.js",
    "import:kanas": "node ./scripts/importKanas.js"
  },
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "@quixo3/prisma-session-store": "^3.1.13",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "connect-flash": "^0.1.1",
    "debug": "~2.6.9",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-handlebars": "^7.1.2",
    "express-session": "^1.18.0",
    "hbs": "^4.2.0",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "twig": "^1.17.1"
  },
  "devDependencies": {
    "@supersoniks/prettier-plugin-twig-melody": "^1.0.4",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20.11.20",
    "@types/twig": "^1.12.16",
    "csv": "^6.3.8",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^5.10.2",
    "tailwindcss": "^3.4.1",
    "tailwindcss-3d": "^1.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
