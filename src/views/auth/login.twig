{% extends 'layouts/base.twig' %}

{% block content %}
  <div class="p-6 w-full flex flex-col gap-4 items-center m-auto rounded-lg sm:max-w-lg"
    data-theme="light">
    <h1 class="text-3xl font-bold text-center">Se connecter</h1>

    <form class="w-full flex flex-col gap-8" method="post">
      <div>
        <label class="label" for="email">Email</label>

        <input type="email"
          id="email"
          name="email"
          placeholder="Email"
          class="w-full input input-bordered"
          autofocus />
      </div>

      <div>
        <label class="label" for="password">Mot de passe</label>

        <input type="password"
          id="password"
          name="password"
          placeholder="Mot de passe"
          class="w-full input input-bordered" />
      </div>

      <button class="btn btn-neutral btn-block">Connexion</button>
    </form>

    <a href="/signup" class="btn btn-block">S'inscrire</a>

    <a href="/auth/google" class="hidden w-full btn btn-wide btn-outline">
      <img class="mr-2 w-6 h-6"
        src="https://www.svgrepo.com/show/475656/google-color.svg"
        loading="lazy"
        alt="google logo" />
      <span>Se connecter avec Google</span>
    </a>
  </div>
{% endblock %}
