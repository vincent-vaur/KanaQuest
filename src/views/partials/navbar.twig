<div class="navbar min-h-8 text-base-content border-b border-base-content/20">
  <div class="navbar-start">
    <div class="tooltip tooltip-right" data-tip="Accueil">
      <a href="/"
        title="Accueil"
        class="btn btn-xs sm:btn-md btn-circle btn-primary">
        <div class="avatar">
          <div class="rounded-full"><img src="/images/logo.png" /></div>
        </div>
      </a>
    </div>

    <h1 class="ml-4 text-lg sm:text-xl">KanaQuest</h1>
  </div>

  <div class="navbar-center"></div>

  <div class="navbar-end">
    <div class="dropdown dropdown-end tooltip tooltip-left" data-tip="Menu">
      <button tabindex="0" class="btn btn-xs sm:btn-md btn-circle">
        <div class="avatar">
          {% if user.picture %}
            <img class="rounded-full" src="{{ user.picture }}" />
          {% else %}
            <span class="sm:text-xl">
              {{ user.username|upper|slice(0, 2) }}
            </span>
          {% endif %}
        </div>
      </button>

      <ul tabindex="0"
        class="mt-3 p-2 menu menu-sm dropdown-content text-neutral-content bg-base-100 shadow rounded-box z-[100]">
        <li>
          <a href="/user/profile"
            class="p-4 flex flex-col justify-start items-end rounded-md">
            <p class="text-bold">{{ user.username }}</p>
            <p class="text-xs text-gray-400">{{ user.email }}</p>
          </a>
        </li>
        <li>
          <a href="/settings" class="p-4 block text-right rounded-md">
            Paramètres
          </a>
        </li>
        <li>
          <a href="/logout" class="p-4 block text-right rounded-md">
            Déconnexion
          </a>
        </li>
      </ul>
    </div>
  </div>
</div>
